<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:id="@+id/cardNews"
    app:cardCornerRadius="15dp"
    app:cardMaxElevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/teal_700">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginEnd="20dp"
            android:id="@+id/imgFilm"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/txtJudulFilm"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:text="@string/judul_news"
            android:layout_toEndOf="@id/imgFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTanggal"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:text="@string/tanggal_news"
            android:layout_toEndOf="@id/imgFilm"
            android:layout_below="@id/txtJudulFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

